{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
  },

  "include": [ "../src/**/*" ],
  "exclude": [
    "**/node_modules/**/*",
    "**/lib/**/*",
    "../src/tests/**/*",
    "../src/index.*.ts"
  ]
}