{
  "name": "wasm-rsa",
  "version": "0.3.0",
  "author": "Ilya Shvyryalkin <ilyashvy@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Harzu/wasm-rsa.git"
  },
  "keywords": [
    "rsa",
    "wasm",
    "rust",
    "wasm-rsa",
    "typescript",
    "cryptography"
  ],
  "main": "lib/index.node.js",
  "browser": "lib/index.browser.js",
  "scripts": {
    "build": "yarn build:wasm; yarn build:browser; yarn build:node",
    "build:browser": "tsc -p configs/tsconfig.browser.json",
    "build:node": "tsc -p configs/tsconfig.node.json",
    "build:wasm": "sh ./scripts/build.sh",
    "publish": "npm publish --access",
    "test:rust": "cd ./src/rsa_rs && cargo test",
    "test:ts": "TS_NODE_PROJECT=./configs/tsconfig.node.json mocha --timeout 999999999 --require ts-node/register src/tests/*.spec.ts",
    "test": "npm run test:rust; npm run test:ts",
    "doc": "rm -rf ./docs/; esdoc",
    "show_doc": "serve ./docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "src/*.ts": [
      "tslint",
      "git add"
    ]
  },
  "dependencies": {
    "crypto": "1.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "10.9.4",
    "chai": "4.1.2",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "esdoc-typescript-plugin": "^1.0.1",
    "husky": "^1.3.1",
    "lint-staged": "7.1.2",
    "mocha": "^5.0.1",
    "serve": "^11.0.0",
    "ts-node": "^7.0.1",
    "tslint": "5.11.0",
    "tslint-eslint-rules": "5.3.1",
    "typescript": "3.3.1"
  }
}
