{
  "name": "wasm-rsa",
  "version": "0.1.3",
  "author": "Ilya Shvyryalkin <ilyashvy@gmail.com>",
  "license": "MIT",
  
  "repository": {
    "type": "git",
    "url": "https://github.com/Harzu/wasm-rsa.git"
  },
  
  "main": "lib/index.node.js",
  "browser": "lib/index.browser.js",

  "scripts": {
    "build": "yarn build:wasm; tsc --build",
    "build:wasm": "sh ./scripts/build.sh",
    "publish": "npm publish --access",
    "test": "mocha --timeout 99999999 --exit -r ts-node/register src/tests/*.spec.ts"
  },

  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },

  "lint-staged": {
    "src/*.ts": [
      "tslint",
      "git add"
    ]
  },

  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "10.9.4",
    "husky": "^1.3.1",
    "mocha": "^5.0.1",
    "lint-staged": "7.1.2",
    "chai": "4.1.2",
    "ts-node": "^7.0.1",
    "tslint": "5.11.0",
    "tslint-eslint-rules": "5.3.1",
    "typescript": "3.3.1"
  }
}
